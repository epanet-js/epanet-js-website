---
import { Picture } from "astro:assets";
import heroImage from "../assets/hero-screenshot.png";
import Link from "@components/ui/link.astro";
import Container from "@components/container.astro";
---

<div class="overflow-x-clip">
  <Container>
    <main class="grid lg:grid-cols-5 place-items-center relative my-10">
      <div
        class="absolute w-96 h-96 blur-2xl -z-10 bg-gradient-radial from-indigo-200 right-0 top-0">
      </div>
      <div
        class="absolute w-96 h-96 blur-2xl -z-10 bg-gradient-radial from-purple-200 right-56 top-10">
      </div>

      <div class="max-w-sm md:max-w-max lg:col-span-2 mb-10">

        <h1 class="text-2xl lg:text-3xl xl:text-4xl font-bold lg:tracking-tight xl:tracking-tighter [text-wrap:balance] text-center lg:text-start">The EPANET you know â€” but modern, enhanced, and <span class="bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">entirely in your browser.</span></h1>
        <p
          class="sm:mx-auto text-lg mt-4 max-w-lg text-slate-600 [text-wrap:balance] text-center lg:text-start">
          Pro version of popular Astroship starter template made for startups.
          Built with Astro and Tailwind CSS.
        </p>
        <div
          class="mt-6 flex flex-col sm:flex-row sm:justify-center lg:justify-start gap-10 sm:gap-3">
            <Link
              href="https://web3templates.com/templates/astroship-pro-astro-saas-website-template"
              target="_blank"
              class="flex gap-1 items-center justify-center relative"
              rel="noopener">
                Launch epanet-js
                <span class="absolute text-center w-full text-sm text-gray-500 -bottom-6">
                  No login needed
                </span>
            </Link>
            <Link
              size="lg"
              style="outline"
              rel="noopener"
              href="https://github.com/surjithctly/astroship"
              class="flex gap-1 items-center justify-center"
              target="_blank">
                Book a demo
            </Link>
        </div>
      </div>
      <div class="py-3 lg:col-span-3 lg:-mr-44">
        <div class="hero_demoscreen relative w-full  sm:max-w-[500px] md:max-w-[600px] lg:max-w-[650px] rounded-xl shadow-2xl bg-[#e8e8e8] browser-mockup with-url">
          <video loop autoplay playsinline crossorigin="anonymous" class="shadow-xl shadow-gray-400/20 rounded-md bg-blue-100 w-full h-full object-cover" preload="auto" poster="/public/video-poster.webp" width="1440" height="1130">
            <source src="/public/epanetjs_demo.mp4" type="video/mp4">
            Your browser does not support the video tag.
          </video>
        </div>
      </div>
    </main>
  </Container>
</div>
